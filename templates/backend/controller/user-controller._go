package controller

import (
	"net/http"
	"strings"

	"{{PackagePath}}/server/model"
	"{{PackagePath}}/server/service"
	"{{PackagePath}}/server/shared/utils"
	"{{PackagePath}}/server/shared/log"
	"github.com/gin-gonic/gin"
)

// SystemUserController is
type SystemUserController struct {
	systemUserService service.ISystemUserService
}

// GetSystemUserID is
func GetSystemUserID(c *gin.Context) string {
	extendDataIntf, _ := c.Get("extendData")
	return extendDataIntf.(map[string]interface{})["userID"].(string)
}

// NewSystemUserController is
func NewSystemUserController(systemUserService service.ISystemUserService) *SystemUserController {

	c := SystemUserController{
		systemUserService: systemUserService,
	}

	return &c
}

// Login is
func (u *SystemUserController) Login(c *gin.Context) {

	sc := CreateServiceContext(c)

	var dto model.LoginSystemUserRequest

	if err := c.BindJSON(&dto); err != nil {
		log.GetLog().Error(sc, "%v", err.Error())
		c.JSON(http.StatusBadRequest, map[string]interface{}{"message": "Invalid Params. Please check data structure and type"})
		return
	}

	token, err := u.systemUserService.Login(dto)
	if err != nil {
		message := log.GetLog().Error(nil, "RESPONSE %v", err.Error())
		c.JSON(http.StatusBadRequest, map[string]interface{}{"message": message})
		return
	}

	message := log.GetLog().Info(sc, "RESPONSE. Login success with token %v", token)
	c.JSON(http.StatusCreated, map[string]interface{}{"message": message, "data": token})

}

// ValidateToken is
func (u *SystemUserController) ValidateToken(c *gin.Context) {
	token := c.Request.Header.Get("Authorization")
	s := strings.Fields(token)
	if len(s) != 2 || s[0] != "Bearer" {
		log.GetLog().Error(nil, "Not proper Authorization token")
		c.AbortWithStatus(http.StatusForbidden)
		return
	}
	extendDataObj := u.systemUserService.ValidateLoginToken(s[1])
	if extendDataObj == nil {
		log.GetLog().Error(nil, "Not Valid token")
		c.AbortWithStatus(http.StatusForbidden)
		return
	}
	c.Set("extendData", extendDataObj.(map[string]interface{}))
	c.Next()
}

// EnforceAccessControl is
func (u *SystemUserController) EnforceAccessControl(accessName string) gin.HandlerFunc {
	return func(c *gin.Context) {

		extendData, exist := c.Get("extendData")
		if !exist {
			log.GetLog().Error(nil, "extendData not exist")			
			c.AbortWithStatus(http.StatusForbidden)
			return
		}

		extendDataMap := extendData.(map[string]interface{})
		if !u.systemUserService.HasAccess(extendDataMap, accessName) {
			log.GetLog().Error(nil, "%s does not have access to %s", extendDataMap["name"].(string), accessName)
			c.AbortWithStatus(http.StatusForbidden)
			return
		}

		c.Next()
	}
}

// Register is
func (u *SystemUserController) Register(c *gin.Context) {

	sc := CreateServiceContext(c)

	var dto model.RegisterSystemUserRequest

	if err := c.BindJSON(&dto); err != nil {
		log.GetLog().Error(sc, "%v", err.Error())
		c.JSON(http.StatusBadRequest, map[string]interface{}{"message": "Invalid Params. Please check data structure and type"})
		return
	}

	log.GetLog().Info(sc, "REQUEST. Data %v", utils.GetJSON(dto))

	if err := u.systemUserService.Register(dto); err != nil {
		message := log.GetLog().Error(sc, "RESPONSE %v", err.Error())
		c.JSON(http.StatusBadRequest, map[string]interface{}{"message": message})
		return
	}

	message := log.GetLog().Info(sc, "RESPONSE. Register success")
	c.JSON(http.StatusCreated, map[string]interface{}{"message": message})
}
