type {{PascalCase .Name}}Dao struct{}

// New{{PascalCase .Name}}Dao is
func New{{PascalCase .Name}}Dao(db *gorm.DB) *{{PascalCase .Name}}Dao {
	db.AutoMigrate(&model.{{PascalCase .Name}}{})
	return &{{PascalCase .Name}}Dao{}
